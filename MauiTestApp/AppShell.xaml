<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiTestApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent ContentTemplate="{DataTemplate views:ManageMainPage}" Route="Login" />
    </FlyoutItem>

    <TabBar Route="Main">
        <ShellContent Title="Home" Route="Home" ContentTemplate="{DataTemplate views:HomeMainPage}" />
    </TabBar>

</Shell>

